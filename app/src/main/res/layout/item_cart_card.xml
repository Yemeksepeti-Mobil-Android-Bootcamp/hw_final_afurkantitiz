<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_10sdp"
    app:contentPadding="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="@dimen/_4sdp"
    android:id="@+id/itemCartCardView"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemCartFoodImageView"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:maxWidth="@dimen/_60sdp"
            android:maxHeight="@dimen/_60sdp"
            android:contentDescription="Food Image"
            android:layout_marginStart="@dimen/_8sdp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/itemCardFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Herbal Pancake"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/benton_sans_bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/itemCartRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Warung Herbal"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/benton_sans_medium"
                android:textColor="#8E8888" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            tools:text="$7"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textSize="@dimen/_20ssp"
            android:textColor="#FEAD1D"
            android:fontFamily="@font/benton_sans_bold"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>